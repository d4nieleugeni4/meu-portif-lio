    <script>
      // Script para o carrossel de fotos
      const carousel = document.querySelector(".carousel");
      const images = carousel.querySelectorAll("img");
      let currentIndex = 0;

      function showNextImage() {
        // Esconde a imagem atual
        images[currentIndex].style.opacity = 0;

        // Avança para a próxima imagem
        currentIndex = (currentIndex + 1) % images.length;

        // Mostra a próxima imagem
        images[currentIndex].style.opacity = 1;
      }

      // Inicia o carrossel quando o mouse passa sobre o container
      carousel.parentElement.addEventListener("mouseenter", () => {
        images[currentIndex].style.opacity = 1; // Mostra a primeira imagem
        setInterval(showNextImage, 2000); // Troca de imagem a cada 2 segundos
      });

      // Reseta o carrossel quando o mouse sai
      carousel.parentElement.addEventListener("mouseleave", () => {
        images.forEach((img) => (img.style.opacity = 0)); // Esconde todas as imagens
        currentIndex = 0; // Reinicia o índice
      });
    </script>
